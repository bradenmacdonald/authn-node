{
    "compilerOptions": {
        "allowJs": false,
        "checkJs": false,
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "target": "ES2018",
    },
    "include": [
        "src/*.ts"
    ],
    "exclude": [
        "src/*.test.ts",
        "node_modules"
    ]
}
